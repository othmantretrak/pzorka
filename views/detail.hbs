<!-- Back to list link -->
<div class="breadcrumb">
  <a href="/list"><i class="fa-solid fa-arrow-left" aria-hidden="true"></i>
    Back to Books List</a>
</div>

<!-- Book detail container using flexbox -->
<div class="detail-container">
  <!-- Book cover section -->
  <div class="detail-cover">
    <div class="book-cover-large">
      <span class="book-initial-large">{{substring book.title 0 1}}</span>
    </div>
  </div>

  <!-- Book information section -->
  <div class="detail-info">
    <h1 class="detail-title">{{book.title}}</h1>

    <!-- Book metadata grid -->
    <div class="detail-grid">
      <div class="detail-item">
        <span class="detail-label">Author:</span>
        <span class="detail-value">{{book.author_name}}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Country:</span>
        <span class="detail-value">{{book.country}}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Genre:</span>
        <span class="detail-value">{{book.genre_name}}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Publication Year:</span>
        <span class="detail-value">{{book.publication_year}}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">ISBN:</span>
        <span class="detail-value">{{book.isbn}}</span>
      </div>

      <div class="detail-item">
        <span class="detail-label">Pages:</span>
        <span class="detail-value">{{book.pages}}</span>
      </div>
    </div>

    <!-- Genre description -->
    <div class="genre-description">
      <h3>About {{book.genre_name}}</h3>
      <p>{{book.genre_description}}</p>
    </div>

    <!-- Action buttons for logged-in users -->
    {{#if isLoggedIn}}
      <div class="detail-actions">
        <a href="/book/{{book.id}}/edit" class="btn btn-primary">Edit Book</a>
        <form
          action="/book/{{book.id}}/delete"
          method="POST"
          style="display: inline;"
          onsubmit="return confirm('Are you sure you want to delete this book?');"
        >
          <button type="submit" class="btn btn-danger">Delete Book</button>
        </form>
      </div>
    {{/if}}
  </div>
</div>